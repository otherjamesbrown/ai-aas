{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@ai-aas/shared": ["../../shared/ts/src"],
      "@ai-aas/shared/*": ["../../shared/ts/src/*"]
    }
  },
  "include": [
    "src"
  ]
}

