# Copy to migrate.env and customize per environment

# Operational database connection string (PostgreSQL URI format)
# Example (local): postgres://postgres:postgres@localhost:5432/ai_aas?sslmode=disable
# Example (managed): postgres://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DB_URL=postgres://postgres:postgres@localhost:5432/ai_aas?sslmode=disable

# Analytics warehouse connection string (PostgreSQL-compatible or warehouse driver URI)
ANALYTICS_URL=postgres://analytics:analytics@localhost:6432/ai_aas_warehouse?sslmode=disable

# Optional: S3-compatible bucket for migration artifacts
ARTIFACT_BUCKET=s3://ai-aas-migration-artifacts

# Observability endpoints for migration telemetry
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel.dev.ai-aas.internal
# Example header format: x-api-key=<token>
OTEL_EXPORTER_OTLP_HEADERS=""

# Deterministic HMAC key used to hash sensitive identifiers (e.g., emails)
# This must be consistent per environment but kept secret.
MIGRATION_EMAIL_HASH_KEY=replace-with-32-byte-secret

# Component selector: operational | analytics
MIGRATION_COMPONENT=operational

# Require confirmation prompts (set to 0 to disable)
MIGRATION_REQUIRE_CONFIRMATION=1
