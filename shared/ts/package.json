{
  "name": "@ai-aas/shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared TypeScript libraries for authentication, configuration, observability, data access, and error handling.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "lint": "eslint --ext .ts src",
    "test": "vitest run --coverage.enabled --coverage.provider=v8 --coverage.reports=json-summary --coverage.clean && node ./scripts/check-coverage.cjs",
    "clean": "rimraf dist"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.9",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.52.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.0",
    "@opentelemetry/resources": "^1.24.0",
    "@opentelemetry/sdk-node": "^0.52.0",
    "@opentelemetry/semantic-conventions": "^1.24.0",
    "dotenv": "^16.4.5",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.2.0",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.11.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.0",
    "vitest": "^1.2.0"
  },
  "vitest": {
    "coverage": {
      "thresholds": {
        "statements": 80,
        "lines": 80,
        "functions": 80,
        "branches": 70
      }
    }
  }
}

