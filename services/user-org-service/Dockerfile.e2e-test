# Dockerfile for building the e2e-test binary.
# This creates a minimal container with just the test binary for deployment.
FROM golang:1.24-alpine AS builder

WORKDIR /build

# Copy go.mod and go.sum first for better caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the e2e-test binary
RUN CGO_ENABLED=0 GOOS=linux go build -o /bin/e2e-test ./cmd/e2e-test

# Final stage: minimal runtime image
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /app

COPY --from=builder /bin/e2e-test /app/e2e-test

ENTRYPOINT ["/app/e2e-test"]

