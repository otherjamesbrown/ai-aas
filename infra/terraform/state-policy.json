{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "TerraformStateReadWrite",
      "Effect": "Allow",
      "Principal": {"AWS": ["*"]},
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": "arn:aws:s3:::infra-state/*"
    },
    {
      "Sid": "BucketList",
      "Effect": "Allow",
      "Principal": {"AWS": ["*"]},
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::infra-state"
    }
  ]
}
