apiVersion: bitnami.com/v1alpha1
kind: SealedSecret
metadata:
  name: platform-bootstrap
  namespace: secrets
  labels:
    environment: ${environment}
spec:
  encryptedData:
%{ for name, payload in secrets }
    ${name}: PLACEHOLDER-${name}
%{ endfor }
  template:
    metadata:
      labels:
        environment: ${environment}
      annotations:
%{ for name, payload in secrets }
%{ for key, value in lookup(payload, "annotations", {}) }
        ${key}: "${value}"
%{ endfor }
%{ endfor }
    type: Opaque
